{
    "pluginAlias": "DeconzGarage",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
      "title": "Deconz Garage",
      "type": "object",
      "properties": 
      {
        "name": {
          "title": "Name",
          "type": "string",
          "required": true,
          "default": "Deconz Garage Door",
          "description": "Name of garage door"
        },
        "doorSensorDeviceID": {
          "title": "Door Sensor Device ID",
          "type": "integer",
          "default": 0,
          "description": "Deconz device ID used to determine the open/closed status of the garage door"
        },
        "doorTriggerDeviceID": {
            "title": "Door Trigger Device ID",
            "type": "integer",
            "default": 0,
            "description": "Deconz device ID used to trigger the door to open/close"
          },
        "deconzApiKey": {
            "title": "Deconz API Key",
            "type": "string",
            "default": "",
            "description": "Deconz API Key for access to REST-API"
        },
        "gatewayIpAddress": {
            "title": "Gateway IP Address",
            "type": "string",
            "default": "127.0.0.1",
            "description": "Deconz gateway IP address"
        },
        "gatewayPort": {
            "title": "Gateway Port",
            "type": "integer",
            "default": 80,
            "description": "Deconz gateway network port"
        }
      }
    }
  }
